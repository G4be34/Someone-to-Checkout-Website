{
    "manifest_version": 3,
    "name": "Dibby",
    "version": "1.2",
    "permissions": [
      "activeTab",
      "tabs", 
      "identity"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Save Property URL"
    },
    "oauth2": {
      "client_id": "1074561935073-mgfn942huhv1l95ul92jini67d1en9ab.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email"
      ]
    },
    "externally_connectable": {
      "matches": [
        "https://us-central1-sightonscene-a87ca.cloudfunctions.net/*"
      ]
    },
    "web_accessible_resources": [
      {
        "resources": ["popup.html"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["*://*.chakra-ui.com/*"],
        "js": ["content-script.js"]
      }
    ]
  }
  